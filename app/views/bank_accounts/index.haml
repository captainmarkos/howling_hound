.user.title.row
  %h2 Bank Accounts
%br/
.user.content.row
  %table.table.table-hover
    %thead
      %tr
        %th BANK ID
        %th ACCOUNT TYPE
        %th ACCOUNT ID
    %tbody
      - @bank_accounts.each do |ba|
        %tr
          %td= "#{ba.bank_id}"
          %td= "#{ba.acct_type}"
          %td= "#{ba.acct_id}"
